<Window x:Class="KMeansAlgorithm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KMeansAlgorithm"
        mc:Ignorable="d"
        Title="MainWindow" Height="681.25" Width="602.083">
    <Grid Background="#FFBFBFBF" >
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="100px" />
        </Grid.RowDefinitions>

        <Canvas x:Name="canDrawArea" Grid.Row="0" Width="500" Height="500" Background="White" />

        <StackPanel Grid.Row="1" Background="LightBlue">
            <Button x:Name="btnReset" Content="Reset" />
            <StackPanel Grid.Row="1" Background="LightBlue" Orientation="Horizontal">
                <Button x:Name="btnResetDataPoints" Content="Reset Points" Width="250" />
                <Button x:Name="btnResetCluster" Content="Reset Cluster" Width="250" />
            </StackPanel>
            <Button x:Name="btnStart" Content="Start" />
            <Button x:Name="btnGen" Content="Quick gen" />
        </StackPanel>

    </Grid>
</Window>
